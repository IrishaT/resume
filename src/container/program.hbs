{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        {{#with program.excursion}}
        <section>
            {{> title data=name big=true}}
            <div><em>{{location.city}}, 
                {{location.country}}</em></div>
            <div><time>{{date}}</time></div>
            <hr>
            <ul>
            {{#each program}}
                <br>
                <hr>    
                <li>
                <div><strong>{{name}}</strong> ({{type}})</div>
                <div><time>{{date}}</time></div>
                <div><time>Duration: {{duration}}</time></div>
                
                <h4>Details:</h4>
                
                {{#with details}}

                    {{#with museum}}
                    <div>
                        <div><b><em>{{name}}</em></b></div>
                        <div><address>
                            {{#with location}}
                                {{address}},
                                {{city}},
                                {{country}}
                            {{/with}}
                        </address></div>    
                    </div>

                    <ol>
                        {{#each exhibits}}
                        <br>
                        <li>
                            <div><strong>{{name}}</strong></div>
                            <div>
                                by <em>{{#if artist}}
                                {{artist}}
                                {{else}}
                                uknknown artist
                                {{/if}}
                                </em>
                            </div>
                            <div>({{description}})</div>
                            <div>{{#if audio_guide}} 
                                <em>PS: is acompined by audio guide</em>
                                {{else}}
                                <em>PS: isnot acompined by audio guide</em>
                                {{/if}}
                            </div>
                        </li>
                        {{/each}}
                    </ol>
                    {{/with}}

                    {{#with venue}}
                    <div>
                        <div><b><em>{{name}}</em></b></div>
                        <div><address>
                            {{#with location}}
                                {{address}},
                                {{city}},
                                {{country}}
                            {{/with}}
                        </address></div>
                    </div>
                    {{/with}}
                    
                    {{#each performers}}
                    <ul>
                        <br>
                        <li>
                            <div><em><q>{{name}}</q></em></div>
                            <div><q>{{name}}</q></div>     
                        </li>     
                    </ul>
                    {{/each}}
                    
                    <br>
                    {{#with guide}}
                    <div>Guide: {{name}}, 
                        speaking {{language}}.</div>
                    <div>Ratind: '<b>{{rating}}</b>' from '5' 
                    </div>
                    {{/with}}
                


                   

                {{/with}}
                </li>
            {{/each}}
            </ul>
            <hr>
            <br>
        </section>
        {{/with}}
    </main>
</div>

