<main class="m-5">
    <div class="nav nav-tabs">
        {{#each navigation.links}}
                <div class="nav-item">
                {{#if href}}
                <a href={{href}} class="nav-link active">
                    {{text}}
                </a>
                {{else}}
                <a class="nav-link disabled">{{text}}</a>   
                {{/if}}
            </div>
        {{/each}}
    </div>

        <h1 class="text mt-5 mb-5">{{header}}</h1>
    
    <section class="row">
    <div class="col-7">
    <div class="card-outline">
    <div class="card-body">
    
        {{#with contacts_data}} 
            <h2>{{title}}</h2>
            <br>
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-warning text-light me-2">{{text}}</button>
            {{else}}
            <button class="btn btn-outline-warning me-5">{{text}}</button>
            {{/if}}
            {{/each}}
            
            
        <br>
        <br>
        <div class="row">
            
        {{#with form}}
                {{#each input}}
                <div class="col-5">
                    {{#with this}}
                    <br>
                    <label class="form-label">{{label}}</label>
                    <placeholder class="form-control text-secondary">{{placeholder}}</placeholder>
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
                {{/each}}
        
        </div>

        <hr>
        {{#each switch}}
                {{#if isActive}}
                <div class="form-check form-switch">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input">
                </div>
                {{else}}
                <div class="form-check form-switch">
                    <label class="form-check-label">{{text}}</label>
                    <input type="checkbox" class="form-check-input" disabled>
                </div>
                {{/if}}
            {{/each}}
        
        <hr>
        <div class="col-10">
        {{#with ../../delivery}}
        <h2 class="my-4">{{title}}</h2>
        <div class="card">
            <div class="card-body">
                
                {{#each select}}
                    <label class="form-label my-3">{{label}}</label>
                        <select class="form-select">
                        <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="value">{{text}}</option>
                        {{/each}}
                        </select>
                {{/each}}
            </div>
        </div>

        {{#each delivery_type}}
            <div class="form-check my-4">
            <input type="radio" class="form-check-input" > {{type}}
            </div>
        {{/each}}

        <br>
        <hr>
        <br>

        {{#with payment}}
        <h2 class="my-3">{{title}}</h2>
            {{#each list}}
            <div class="form-check my-4">
            <input type="radio" class="form-check-input"> {{type}}
            <div class="form-text">{{description}}</div>
            </div>
            {{/each}}
        {{/with}}

        <br>
        <hr>
        <br>
        
        <h2>{{contact.title}}</h2>
        {{#each contact}}        
                {{#with this}}
                <div class="col-5">
                    
                    <label class="form-label">{{label}}</label>
                    <div class="form-control text-secondary my-3">{{placeholder}}</div>
                    <div class="form-text">{{caption}}</div>
                    {{/with}}
                </div>
        {{/each}}

        <br>
        <hr>
        <br>

        {{#with coment}}        
                <div class="col-5">
                    <label class="form-label">{{label}}</label>
                    <div class="form-control text-secondary my-3">{{placeholder}}</div>
                </div>
        {{/with}}
        <br>
        <hr>
        <br>
        {{/with}}
        </div>
        </div>
        </div>
    </div>
    </div>
    </div>


    <div class="col-5">
    <div class="card-outline">
        
        <div class="card">
        <div class="card-body">
            {{#each ../../action_block}}
            <br> 
            {{#if isSuccess}}
            <button class="btn btn-success mb-3">{{text}}</button>
            {{/if}}
            {{#if isDanger}}
            <button class="btn btn-danger mb-3">{{text}}</button>
            {{/if}}
            {{#if isInfo}}
            <button class="btn btn-info">{{text}}</button>
            {{/if}}
            {{/each}}
       </div>
       </div>
       </div>

        <div class="card">
        <div class="card-body">
            {{#with ../../total}}
            <h2 class="mb-3">{{title}}</h2>
            {{#each item_list}}
            <p>{{name}}: {{price}}</p>
            {{/each}}
            <hr>
            {{#each additional_info}}
            <p>{{text}}: {{value}}</p>
            {{/each}}
            <hr>
            {{#with total_price}}
            <p>{{text}}: {{value}}</p>
            {{/with}}
            <hr>
            {{#each button}}
            <p>
            {{#if isPrimary}}
            <button class="btn btn-primary mb-">{{text}}</button>
            {{/if}}
            {{#if isOutline}}
            <button class="btn btn-outline-primary">{{text}}</button>
            {{/if}}
            </p>
            {{/each}}
            {{/with}}
       </div>
       </div>
       </div>

    </div>
    </div>
    </section>
    
    {{/with}}
    {{/with}}


</main>