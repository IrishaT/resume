
<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Work history" big=true}}
                <div>
                    <ul>
                        {{#each works}}
                        <li>
                            <div>{{position}}</div>
                            
                            <br>
                            
                            <div>{{duration.from}} -  
                                {{#if duration.to}} 
                                {{duration.to}} 
                                {{else}} (досі тут працюємо) 
                                {{/if}}
                            </div>
                            
                            <br>
                            
                            <div>
                                {{#if company.url}}
                                {{> link text=company.name href=company.url blank=true noLine=true}}</div>
                                {{else}}
                                <b>company.name</b>
                                {{/if}}
                            <br>
                            <br>

                            <div><strong> Projects ({{projectAmount}}): </strong></div>
                            <br>
                            <ul>
                                 {{#each projects}}
                                <li>
                                     <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                     <br>
                                     <div>{{about}}</div>
                                     <br>
                                     <br>
                                     <div><em>Project stacks ({{stackAmount}}):</em></div>
                                        <ul>
                                            {{#each stack}}
                                            <br>
                                            <li>    
                                                {{name}}
                                            </li>
                                            {{/each}}
                                        </ul>

                                        <br>
                                        <br>

                                    <div><em>Project awards ({{awardAmount}}):</em></div>
                                        <ul>
                                            {{#each awards}}
                                            <br>
                                            <li>    
                                                {{name}}
                                            </li>
                                            {{/each}}
                                        </ul>
                                </li>
                                {{/each}}
                            </ul>
                            
                        </li>

                        {{/each}}
                    </ul>
                </div>
            </section>
    {{/with}}
</div>

