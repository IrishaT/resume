{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="m-5">
    <main>
        {{#with main}}
        <section>
            {{> title data="My educations" big=true}}
            <ul>
                {{#each educations}}
                <li>
                    {{name}}
                    {{#unless isEnd}} 
                    (studing in progress) 
                    {{/unless}}

                </li>
                {{/each}}
            </ul>
        </section>
         <section>
            {{> title data="My certificates" big=false}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
        {{/with}}
    </main>
</div>

