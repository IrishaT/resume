
<div>
    <main>
        <section>
            <strong>
                {{> title data=name big=true}}
            </strong>
            <ol>
                {{#each users}}
                <br>
                <hr>
                <li>
                    <div>
                        {{> title data=name big=false}}
                    </div>
                    <div>
                        ID: <b>{{id}}</b>
                    </div>
                    <div>
                        Gender: <em>{{gender}}</em>
                    </div>
                    <div>
                        Age: {{age}}
                    </div>
                    <div>
                        <br>
                        <em><b>Friends:</b></em>
                        <ul> {{#each friends}} <br>
                            <li>
                                <div><em>{{name}}</em></div>
                                <div>ID: <b>{{id}}</b></div>
                                <div>Gender: <em>{{gender}}</em></div>
                                <div>Age: {{age}}</div>
                                <br>
                                <div><b>Mutual friends:</b></div>
                                    <ul> {{#each mutual_friends}}
                                        <li>
                                        <div><em>{{name}}</em></div>
                                        <div>ID: <b>{{id}}</b></div>
                                        <div>Gender: <em>{{gender}}</em></div>
                                        <div>Age: {{age}}</div>
                                        </li>
                                    {{/each}}
                                    </ul>
                            </li>
                        {{/each}}
                        </ul>
                    </div>
                    <br>
                    <div>
                        {{#if groups}}
                        <em><b>Groups:</b></em>
                        <ul> {{#each groups}} <br>
                            <li>
                                <div><em>{{name}}</em></div>
                                <div>ID: <b>{{id}}</b></div>
                                <div>Description: <em>{{description}}</em></div>
                                <br>
                                <div><b>Members:</b></div>
                                    <ul> {{#each members}} <br>
                                        <li>
                                        <div><em>{{name}}</em></div>
                                        <div>ID: <b>{{id}}</b></div>
                                        <div>Gender: <em>{{gender}}</em></div>
                                        <div>Age: {{age}}</div>
                                        </li>
                                        {{/each}}
                                    </ul>
                            </li>
                        {{/each}}
                        </ul>
                        {{/if}}
                    </div>
                </li>
            {{/each}}
            </ol> 
        </section>
    </main>
</div>

