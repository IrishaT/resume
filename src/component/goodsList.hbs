{{#each goodsList}}
            
            <div class="row">
                <div class="col-3">
                   <div class="card">
                    <div class="card-footer">
                    <img src={{img}} width=300>
                    </div>

                    <div class="card-body">
                        {{#if isHot}}
                        <span class="badge rounded-pill text-bg-warning text-uppercase">hot!
                        </span>
                        {{/if}}
                        {{#if isNew}}
                        <span class="badge rounded-pill text-bg-primary">нове
                        </span>
                        {{/if}}
                        {{#if isFast}}
                        <div class="badge text-bg-success">
                            Швидка доставка
                        </div>
                        {{/if}}
                        {{#if isFree}}
                        <p class="badge text-bg-secondary">
                            Безкоштовна доставка
                        </p>
                        {{/if}}

                        <h5>{{name}}</h5>
                        <div>{{review.text}}: {{review.amount}}</div>
                        <p class="my-1">{{delivery}}</p>

                        {{#each buttons}}
                        <br>
                        {{#if isPrimary}}
                        <a href={{link}} class="btn btn-primary m-2">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href={{link}} class="btn btn-secondary m-2">{{text}}</a>
                        {{/if}}
                        {{/each}}

                        <ul>
                        <br>
                        {{#each characteristics}}
                            <li>
                                {{title}}: {{value}}
                            </li>
                        {{/each}}
                        </ul>

                    </div>
                </div> 
                </div> 
            </div>
            
            {{/each}}